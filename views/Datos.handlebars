<div>

<h3>Platos Disponibles</h3>

      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Eliminar</th>


          </tr>
        </thead>

        <tbody id="cuerpo">

          {{#each platos}}

          <tr>
            <th scope="row">{{this.id}}</th>
            <td id="nombre" value="{{this.nombre}}">{{this.nombre}}</td>
            <td>{{this.descripcion}}</td>
            <td><button class="btn btn-light" id="eliminar">Eliminar</button></td>
          </tr>

          {{/each}}

          </tr>
        </tbody>
      </table>


</div>


<script>

  $('#eliminar').on('click', async(e)=>{
        e.preventDefault();
        const nombre = $('#nombre').val();
        console.log(nombre)
        try{
        await axios.delete(`/comida/${nombre}`)
            alert('Comida eliminada');
            window.location.href = '/datos'
        } catch (e) {
            console.log(e)
        }
    });

</script>

