<div>
    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50">

      <form action="/usuarios" method="post" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input class="form-control m-auto" name="email" type="text"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input class="form-control m-auto" name="nombre"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input class="form-control m-auto"  name="password" id="password" type="password"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input class="form-control m-auto" name="password2" id="password2" type="password" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input class="form-control m-auto" name="anos_experiencia"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input class="form-control m-auto" name="especialidad"/>
          </div>
          <div class="form-group col-12 col-sm-12">
            <label>Foto de perfil</label>
            <input type="file" name="foto" />
          </div>
        </div>
        <button type="submit" class="btn btn-info mb-3">Registrarme</button>
        <p><a href="/login"> Iniciar sesión</a></p>
      </form>
    </div>

  </div>
  <script>
    $('button').click(async (e) => {
      e.preventDefault();
      const password = $('#password').val();
      const password2 = $('#password2').val();
      if (password !== password2) {
        alert('Las contraseñas no coinciden');
      } else {
        alert('Registro exitoso');
        $('form').submit();
      }
    });
  </script>
  